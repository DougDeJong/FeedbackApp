{{#if user}}


<div class="container-fluid">

  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-md-4 user-container col-arrange">


  <h1>Create A Repo</h1>

<form action="/repos/create" method="POST" enctype="multipart/form-data">
<div class="form-group">
    <label for="">Track Repo Name</label>
    <input type="text" name="reponame">
</div>

<div class="form-group">

    <label for="">Description</label>
    <input type="textarea" name="repodescription">
</div>

<div class="form-group">
    <label for="">Repo Image</label>
    <input type="file" name="repoimage">
</div>



    {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>


    <button>Submit</button>

    {{else}}

    <a href="/auth/login">It Looks Like you're Not Signed in!</a>

{{/if}}